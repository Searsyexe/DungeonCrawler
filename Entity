class Entity //class creation for entity class. every entity inherits to make location/health/keeping track of entities easier
{
public:
    int health;
    int locx;
    int locy;
    int numentity;
    int entid;
    
    Entity( int _health, int _locx, int _locy, int _numentity, int _entid ) //constructor for entity
    {
         health = _health;
         locx = _locx;
         locy = _locy;
         numentity = _numentity;
         entid = _entid;
    }
    
    void addentity() //adds a entity to entity count
    {
        numentity = numentity + 1
        entid = entid + 1
    }
    
    void removeentity() //removes entity to entity count. allows control of how many spawned
    {
        numentity = numentity - 1
        entid = ent - 1
    }
   
    int getentityid() //gets entity id so the game knows which entity is fighter or interacting at any time
    {
        return entid;
    }
};
