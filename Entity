class Entity
{
public:
    int health;
    int locx;
    int locy;
    int numentity;
    int entid;
    
    Entity( int _health, int _locx, int _locy, int _numentity, int _entid )
    {
         health = _health;
         locx = _locx;
         locy = _locy;
         numentity = _numentity;
         entid = _entid;
    }
    
    void addentity()
    {
        numentity = numentity + 1
        entid = entid + 1
    }
    
    void removeentity()
    {
        numentity = numentity - 1
        entid = ent - 1
    }
   
    int getentityid()
    {
        return entid;
    }
};
